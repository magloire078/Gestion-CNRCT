rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // =================================
    // Helper Functions
    // =================================
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Get the user's profile from the 'users' collection
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Get the user's role from their profile
    function getRole() {
      return getUserData().roleId;
    }
    
    // Check if the user has a specific permission
    function hasPermission(permission) {
      let roleData = get(/databases/$(database)/documents/roles/$(getRole())).data;
      // Super Admins and Admins have all permissions
      if (getRole() == 'super-admin' || getRole() == 'administrateur') {
        return true;
      }
      return permission in roleData.permissions;
    }

    // =================================
    // Collection Rules
    // =================================

    // --- Users & Roles ---
    // Only admins can see all users. Users can see their own profile.
    match /users/{userId} {
      allow read: if isUser(userId) || hasPermission('page:admin:view');
      allow update: if isUser(userId) || hasPermission('page:admin:view'); // Admins can link users to employees, etc.
      allow create, delete: if hasPermission('page:admin:view');
    }

    // Roles can be read by any authenticated user to check their own permissions, but only modified by admins.
    match /roles/{roleId} {
      allow read: if isAuthenticated();
      allow write: if hasPermission('page:admin:view');
    }

    // --- Core HR Data ---
    match /employees/{employeeId} {
      allow read: if isAuthenticated();
      allow write: if hasPermission('page:employees:view');
    }
    match /employees/{employeeId}/history/{eventId} {
      allow read: if isAuthenticated();
      allow write: if hasPermission('page:employees:view');
    }

    match /leaves/{leaveId} {
      allow read, write: if isAuthenticated();
    }
    
    match /missions/{missionId} {
       allow read, write: if hasPermission('page:missions:view');
    }

    match /evaluations/{evalId} {
        allow read, write: if isAuthenticated();
    }

    // --- Chiefs & Conflicts ---
    match /chiefs/{chiefId} {
       allow read: if isAuthenticated();
       allow write: if hasPermission('page:chiefs:view');
    }
    match /conflicts/{conflictId} {
       allow read, write: if hasPermission('page:conflicts:view');
    }
    
    // --- Assets & Supplies ---
    match /it-assets/{assetTag} {
       allow read, write: if hasPermission('page:it-assets:view');
    }
    
    match /fleet/{plate} {
        allow read, write: if hasPermission('page:fleet:view');
    }

    match /supplies/{supplyId} {
        allow read, write: if hasPermission('page:supplies:view');
    }
    
    // --- Financial ---
    match /budgetLines/{lineId} {
        allow read, write: if hasPermission('page:budget:view');
    }

    // --- App Configuration ---
    // Organization settings can be read by anyone to display logos/name on public pages.
    match /settings/organization_settings {
      allow read: if true;
      allow write: if hasPermission('page:admin:view');
    }
    
    // Counters are managed server-side.
    match /counters/{counterId} {
        allow read, write: if isAuthenticated(); // Allow server-side functions to update
    }
    
    // --- Other Collections ---
    // Documents are accessed via secure URLs, rules can be stricter if needed
    match /repository/{docId} {
        allow read, write: if isAuthenticated();
    }

    // Notifications: users can only read their own notifications.
    match /notifications/{notifId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || resource.data.userId == 'all');
      allow update: if isAuthenticated() && isUser(resource.data.userId); // Allow users to mark their own notifications as read
      allow create: if isAuthenticated(); // Allow server-side functions/app to create notifications
      allow delete: if false; // Disallow deletion
    }
    
    // --- Organizational Structure ---
    match /departments/{deptId} {
      allow read: if isAuthenticated();
      allow write: if hasPermission('page:admin:view');
    }
    match /directions/{dirId} {
      allow read: if isAuthenticated();
      allow write: if hasPermission('page:admin:view');
    }
    match /services/{svcId} {
      allow read: if isAuthenticated();
      allow write: if hasPermission('page:admin:view');
    }
  }
}