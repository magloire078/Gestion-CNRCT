
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Les utilisateurs peuvent lire/créer/mettre à jour leur propre document de profil
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // N'importe quel utilisateur authentifié peut lire les rôles
    match /roles/{roleId} {
      allow read: if request.auth != null;
      // Seuls les administrateurs peuvent modifier les rôles (à implémenter plus tard)
      allow write: if request.auth != null; 
    }
    
    // N'importe quel utilisateur authentifié peut lire/écrire dans les autres collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
