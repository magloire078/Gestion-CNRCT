rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin roles
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roleId in [
        'super-admin', 
        'administrateur',
        'LHcHyfBzile3r0vyFOFb',
        'dirigeant--pr-sident-',
        'cadre-sup-rieur--directeur-',
        'cadre-interm-diaire--chef-de-service-'
      ];
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read/update their own profile, admins can read any
    match /users/{userId} {
      allow read: if request.auth != null;
      allow update: if request.auth.uid == userId;
      allow create, delete: if isAdmin();
    }
    
    // Allow authenticated users to read most collections
    // But restrict writes to admins
    match /employees/{employeeId} {
    	allow read: if request.auth != null;
      allow write: if isAdmin();
      
      // Allow read/write to history subcollection
      match /history/{eventId} {
      	allow read: if request.auth != null;
        allow write: if isAdmin();
      }
    }

    match /roles/{roleId} {
    	allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /departments/{deptId} {
    	allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /directions/{dirId} {
    	allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /services/{serviceId} {
    	allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /missions/{missionId} {
    	allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /leaves/{leaveId} {
      allow read, write: if request.auth != null;
    }
    
    match /assets/{assetId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /fleet/{vehicleId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /conflicts/{conflictId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /supplies/{supplyId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
     match /chiefs/{chiefId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /evaluations/{evalId} {
       allow read: if request.auth != null;
       allow create, update, delete: if isAdmin() || request.auth.uid == resource.data.managerId || request.auth.uid == resource.data.employeeId;
    }
    
    match /repository/{docId} {
    	allow read, write: if request.auth != null;
    }

    match /notifications/{notifId} {
        allow read, update: if request.auth.uid == resource.data.userId;
        allow create, delete: if request.auth != null; // Allow any authenticated user to create notifications for now
    }
    
    match /settings/{settingId} {
    	allow read: if true; // Publicly readable settings
      allow write: if isAdmin();
    }
    
    match /tickets/{ticketId} {
      allow read, write: if request.auth != null;
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
    
    match /budgetLines/{lineId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /customs/{customId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
