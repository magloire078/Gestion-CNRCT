rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ==================
    // Helper Functions
    // ==================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roleId;
    }

    function isSuperAdmin() {
      return isSignedIn() && getUserRole() == 'super-admin';
    }

    function isAdmin() {
      return isSignedIn() && (getUserRole() == 'super-admin' || getUserRole() == 'administrateur');
    }
    
    function isRH() {
      return isSignedIn() && (isAdmin() || getUserRole() == 'manager-rh');
    }
    
    function hasPermission(permission) {
        let userPermissions = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions;
        // Super admin and admin have all permissions implicitly for most collections
        return isAdmin() || permission in userPermissions;
    }

    // ==================
    // Rules per Collection
    // ==================

    // Users can read their own profile, admins can read any.
    // Users can update their own profile, admins can update any.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow update: if isOwner(userId) || isAdmin();
      allow create, delete: if isAdmin();
    }

    // Roles can be read by any authenticated user (needed for client-side logic).
    // Only admins can create, update, or delete roles.
    match /roles/{roleId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // Employees can be read by authenticated users with permission.
    // Only HR and Admins can create, update, or delete.
    match /employees/{employeeId} {
      allow read: if hasPermission('page:employees:view');
      allow create, update, delete: if isRH();
    }
    
    match /employees/{employeeId}/history/{eventId} {
        allow read, write: if isRH();
    }

    // Leave can be read by HR/Admins. Users can read their own.
    // Users can create their own. HR/Admins can update/delete.
    match /leaves/{leaveId} {
      allow read: if isRH() || (isSignedIn() && resource.data.employee == request.auth.token.name);
      allow create: if isSignedIn();
      allow update, delete: if isRH();
    }

    // Missions can be read by all authenticated users.
    // Only HR/Admins can create/update/delete.
    match /missions/{missionId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isRH();
    }

    // Chiefs can be read by all authenticated users.
    // Only Admins can modify.
    match /chiefs/{chiefId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isAdmin();
    }

    // Settings are public for app configuration (logos, org name).
    // Only admins can change them.
    match /settings/organization_settings {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Other collections managed by Admins/HR
    match /assets/{assetId} {
      allow read, write: if isRH();
    }
    match /fleet/{vehicleId} {
      allow read, write: if isRH();
    }
    match /conflicts/{conflictId} {
      allow read, write: if isRH();
    }
    match /supplies/{supplyId} {
      allow read, write: if isRH();
    }
    match /evaluations/{evaluationId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isRH();
    }
    
    // Department structure can be read by authenticated users, managed by admins.
    match /departments/{deptId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isAdmin();
    }
    match /directions/{dirId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isAdmin();
    }
    match /services/{serviceId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isAdmin();
    }
    
    // Notifications are private to each user.
    match /notifications/{notificationId} {
        allow read, write: if isOwner(resource.data.userId);
        allow create: if isSignedIn(); // Allow any signed-in user/service to create a notification
    }
    
     match /repository/{documentId} {
      allow read, write: if isSignedIn();
    }
    
    match /counters/{counterId} {
        allow read, write: if isSignedIn();
    }
    
     match /budgetLines/{lineId} {
      allow read, write: if hasPermission('page:budget:view');
    }
  }
}
