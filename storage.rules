
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to all files for any authenticated user.
    // This is a permissive rule for development. For production, you should
    // implement more granular rules to protect user data.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
