
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows anyone with your project ID to read and write to
    // your Firestore database. This is useful for getting started, but it
    // is insecure.
    //
    // Make sure to restrict access before deploying to production. See
    // https://firebase.google.com/docs/firestore/security/get-started
    // for more information.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
