rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Règle pour les photos de profil utilisateur :
    // Chaque utilisateur authentifié peut écrire dans son propre dossier.
    match /user_photos/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Règle pour les logos de l'organisation :
    // Tout utilisateur authentifié peut lire et écrire les logos.
    match /organization/{logoName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
