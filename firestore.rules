
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows anyone with your project ID to read and write to
    // your Firestore database. This is useful for getting started, but is
    // not recommended for production.
    //
    // Make sure to secure your database before deploying to production.
    // For more information, see: https://firebase.google.com/docs/firestore/security/get-started
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
