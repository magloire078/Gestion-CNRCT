rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read on all files, but write only for authenticated users.
    // This is a simple rule for prototyping. For production, you'd want more specific rules.
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}
